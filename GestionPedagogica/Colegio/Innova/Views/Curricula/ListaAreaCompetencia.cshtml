                    <div>
                        @item.areaCurricular
                    </div>
                </td>
                <td>
                    <div>
                        @item.competencia
                    </div>
                </td>
                <td>
                    <div>
                        @item.capacidad
                    </div>
                </td>
                <td>
                    <div class="eliminarCompetenciaCapacidadArea" data-toggle="tooltip" data-placement="top" title="Eliminar competencias y capacidades">
                        <img src="~/Content/Images/eliminar.png" alt="Competencia Capacidad Area" />
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>

